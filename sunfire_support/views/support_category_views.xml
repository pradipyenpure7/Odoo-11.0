<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="support_category_view_tree" model="ir.ui.view">
            <field name="name">support.category.tab.tree.view</field>
            <field name="model">support.category</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="support_category_action" model="ir.actions.act_window">
            <field name="name">Support Ticket Category</field>
            <field name="res_model">support.category</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p>
	          No Support Tickets Tags found
                </p>
            </field>
        </record>

    </data>
</odoo>